/* pages/home/home.wxss */
page {
    background-color: #fafafa;
}

.slider {
    width: 750rpx;
    height: 320rpx;
}

.slider image {
    width: 750rpx;
    height: 320rpx;
}

.title {
    font-weight: bold;
    font-size: 32rpx;
    color: #333333;
    padding: 28rpx 34rpx;
}

.img {
    position: relative;
}

.img text {
    position: absolute;
    top: -10rpx;
    left: 28rpx;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    background-color: rgb(89, 226, 89);
    border-radius: 50%;
}

.img image {
    width: 750rpx;
    height: 320rpx;
     /* 消除图片缝隙 */
    vertical-align: middle !important;
}
.info{
    padding: 28rpx 34rpx;
}
.info .tit{
    font-size: 30rpx;
    font-weight: bold;
}
.btn {
    margin-top: 16rpx;
    font-size: 25rpx;
    width: 86rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    border-radius: 4rpx;
    background-color: #fcbe3a;
    color: #ffffff;
}
